<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.girbola.imageviewer.imageviewer.options.SettingsController">
   <children>
      <TabPane prefHeight="382.0" prefWidth="372.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab closable="false" text="%settings">
               <content>
                  <VBox alignment="BOTTOM_LEFT">
                     <children>
                        <VBox alignment="BOTTOM_LEFT" spacing="7.0" style="-fx-border-color: white;" VBox.vgrow="NEVER">
                           <children>
                              <HBox>
                                 <children>
                                    <CheckBox fx:id="isVLC_chk" mnemonicParsing="false" text="%vlcPlayerSupport" textFill="#f5f5f5" />
                                 </children>
                              </HBox>
                              <HBox fx:id="vlc_container" spacing="3.0">
                                 <children>
                                    <Label text="VLC path" textFill="WHITE" />
                                    <TextField fx:id="vlcPath_tf" editable="false" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="chooseVLCPath_btn" mnemonicParsing="false" onAction="#chooseVLCPath_btn_action" text="Button" />
                                 </children>
                                 <padding>
                                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                           </padding>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
